<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_post_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_blog_post_path(@post) %>
    <% end if can?(:admin, Spree::Product) %>
    <%= content_tag :li, class: ('active' if current == :side_content) do %>
      <%= link_to_with_icon 'picture', 'Side Content', admin_blog_post_side_content_path(@post) %>
    <% end if can?(:admin, Spree::Image) %>
    <%= content_tag :li, class: ('active' if current == :media) do %>
      <%= link_to_with_icon 'th', 'Media',  admin_blog_post_media_path(@post) %>
    <% end if can?(:admin, Spree::Variant) %>
  </ul>
<% end %>