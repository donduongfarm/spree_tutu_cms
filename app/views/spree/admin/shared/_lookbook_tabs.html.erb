<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_lookbook_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_lookbook_path(@lookbook) %>
    <% end if can?(:admin, Spree::Product) %>

    <%= content_tag :li, class: ('active' if current == :items) do %>
      <%= link_to_with_icon 'picture', 'Items', admin_lookbook_lookbook_items_path(@lookbook) %>
    <% end if can?(:admin, Spree::Image) %>
  </ul>
<% end %>