<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_block_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_cms_block_path(@block) %>
    <% end if can?(:admin, Spree::Product) %>
    <%= content_tag :li, class: ('active' if current == :contents) do %>
      <%= link_to_with_icon 'th-large', 'Contents', admin_cms_block_block_contents_path(@block) %>
    <% end if can?(:admin, Spree::Product) %>
  </ul>
<% end %>